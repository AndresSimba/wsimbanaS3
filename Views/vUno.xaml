<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="wsimbanaS3.Views.vUno"
             Title="vUno">
    <!--ESTILOS-->
    <ContentPage.Resources>
        <Style x:Key="estiloLabel" TargetType="Label">
            <Setter Property="FontSize" Value ="50" />
            <Setter Property="TextColor" Value="RED"/>
        </Style>
        <Style x:Key="estilobutton" TargetType="Button">
            <Setter Property="Background" Value="Yellow"/>
            <Setter Property="TextColor" Value="Blue"/>
        </Style>
    </ContentPage.Resources>
    
    <VerticalStackLayout
        Spacing="20"
        Padding="20">
        <Label 
            Style="{StaticResource estiloLabel}" 
            Text="VISTA UNO"
            VerticalOptions="Center" 
            FontSize="20"
            HorizontalOptions="Center" />
        <Entry
            x:Name="txtUsuario"
            Placeholder="Ingresa Usuario"
            />
        <Entry
            x:Name="txtContrasena"
            Placeholder="Ingresa ContraseÃ±a"
            IsPassword="True"
            />  
        <Button x:Name="btnAbrir"
                Style="{StaticResource estilobutton}"
                Text="abrir Ventana"
                Clicked="btnAbrir_Clicked">
        </Button>
        <Button
            x:Name="btnRegistro"
            Style="{StaticResource estilobutton}"
            Text="Registro"
            Clicked="btnRegistro_Clicked"
            />
    </VerticalStackLayout>
</ContentPage>